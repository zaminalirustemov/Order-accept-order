<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
                <!-- Login Form s-->
                <form asp-action="register" asp-controller="account" method="post">
                    <div class="login-form">
                        <h4 class="login-title">New Customer</h4>
                        <p><span class="font-weight-bold">I am a new customer</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Fullname">Full Name</label>
                                <input asp-for="Fullname" class="mb-0 form-control" 
                                       placeholder="Enter your full name">
                                       <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Username">Username</label>
                                <input asp-for="Username" class="mb-0 form-control"
                                       placeholder="Enter your username">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Email">Email</label>
                                <input class="mb-0 form-control" asp-for="Email" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="ConfirmPassword">Repeat Password</label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Repeat your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>
